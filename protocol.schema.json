{
  "type": "array",
  "oneOf": [
    {
      "description": "MSG_TEXT event",
      "items": [
        {
          "const": 1
        },
        {
          "$ref": "#/$defs/operation"
        },
        {
          "$ref": "#/$defs/buffer"
        },
        {
          "name": "clientId",
          "description": "ID of the client that sent the message",
          "type": "integer"
        }
      ],
      "minItems": 4,
      "additionalItems": false
    },
    {
      "description": "MSG_AVAILABLE event",
      "items": [
        {
          "const": 2
        },
        {
          "type": "boolean"
        },
        {
          "type": "integer",
          "name": "clientId",
          "description": "Client ID"
        },
        {
          "type": "boolean"
        }
      ],
      "minItems": 4,
      "additionalItems": false
    },
    {
      "description": "MSG_REQUEST event",
      "items": [
        {
          "const": 3
        }
      ],
      "minItems": 1,
      "additionalItems": false
    },
    {
      "description": "MSG_INFO event",
      "items": [
        {
          "const": 5
        },
        {
          "name": "session_share",
          "description": "Whether the host is sharing a full session or a single buffer",
          "type": "boolean"
        },
        {
          "name": "username",
          "description": "Username of the client",
          "type": "string"
        },
        {
          "name": "agent",
          "description": "Agent identifier of the client",
          "type": "integer"
        }
      ],
      "minItems": 4,
      "additionalItems": false
    },
    {
      "description": "MSG_INITIAL event",
      "items": [
        {
          "const": 6
        },
        {
          "name": "buffer_name",
          "type": "string"
        },
        {
          "name": "buffer",
          "$ref": "#/$defs/buffer"
        },
        {
          "name": "pids",
          "description": "List of PIDs in the buffer",
          "type": "array",
          "items": {
            "$ref": "#/$defs/pid"
          }
        },
        {
          "name": "content",
          "description": "List of lines in the buffer",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "minItems": 5,
      "additionalItems": false
    },
    {
      "name": "MSG_CONNECT event",
      "items": [
        {
          "const": 7
        },
        {
          "name": "client_id",
          "description": "ID of the client that connected",
          "type": "integer"
        },
        {
          "name": "username",
          "description": "Username of the client",
          "type": "string"
        }
      ],
      "minItems": 3,
      "additionalItems": false
    },
    {
      "name": "MSG_DISCONNECT event",
      "items": [
        {
          "const": 8
        },
        {
          "name": "client_id",
          "description": "ID of the client that disconnected",
          "type": "integer"
        }
      ],
      "minItems": 2,
      "additionalItems": false
    },
    {
      "name": "MSG_MARK event",
      "items": [
        {
          "const": 10
        },
        {
          "name": "client_id",
          "type": "integer"
        },
        {
          "name": "buffer",
          "$ref": "#/$defs/buffer"
        },
        {
          "name": "start_pid",
          "$ref": "#/$defs/pid"
        },
        {
          "name": "end_pid",
          "$ref": "#/$defs/pid"
        }
      ],
      "minItems": 5,
      "additionalItems": false
    }
  ],

  "$defs": {
    "operation": {
      "$comment": "The order of items is (incorrectly) different between insert and delete. To be fixed once the nvim plugin is updated.",
      "type": "array",
      "oneOf": [
        {
          "$comment": "Delete",
          "items": [
            {
              "const": 1
            },
            {
              "$ref": "#/$defs/pid"
            },
            {
              "type": "string",
              "maxLength": 1
            }
          ],
          "minItems": 2,
          "additionalItems": false
        },
        {
          "$comment": "Insert",
          "items": [
            {
                "const": 2
            },
            {
              "type": "string",
              "maxLength": 1
            },
            {
              "$ref": "#/$defs/pid"
            }
          ],
          "minItems": 3,
          "additionalItems": false
        }
      ]
    },
    "pid": {
      "type": "array",
      "items": {
        "type": "array",
        "items": [
          {
            "name": "uid",
            "type": "integer"
          },
          {
            "name": "client_id",
            "type": "integer"
          }
        ],
        "minItems": 2,
        "additionalItems": false
      }
    },
    "buffer": {
      "type": "array",
      "items": [
        {
          "name": "client_id",
          "description": "ID of the client that owns the buffer",
          "type": "integer"
        },
        {
          "name": "buffer_id",
          "type": "integer"
        }
      ],
      "minItems": 2,
      "additionalItems": false
    }
  }
}